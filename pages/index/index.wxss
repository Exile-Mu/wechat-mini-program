.container {
    display: flex; /* 设置为弹性盒布局 */
    flex-direction: column; /* 垂直排列子元素 */
    justify-content: center; /* 在主轴上居中对齐子元素 */
    align-items: center; /* 在交叉轴上居中对齐子元素 */
    padding: 0; /* 确保没有额外的填充 */
    width: 100%;
    height: 100vh;
}

.swiper-container {
    width: 100%;
    height: 100vh;
}

.swiper-item {
    display: flex; /* 设置为弹性盒布局 */
    justify-content: center; /* 在主轴上居中对齐子元素 */
    align-items: center; /* 在交叉轴上居中对齐子元素 */
    width: 100%;
    height: 100%;
}

.section {
    display: flex; /* 设置为弹性盒布局 */
    flex-direction: column; /* 垂直排列子元素 */
    justify-content: center; /* 在主轴上居中对齐子元素 */
    align-items: center; /* 在交叉轴上居中对齐子元素 */
    width: 100%;
    height: 100vh;
}

.fullscreen-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: #000; /* 纯黑色背景 */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    touch-action: none; /* 禁止滑动事件传递到下面的滑块 */
}

.fullscreen-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* 确保图片占满整个屏幕 */
}

.title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.description {
    font-size: 16px;
    line-height: 1.5;
    text-align: center;
    padding: 0 20px;
}

.image, .sample-image, .sample-video {
    width: 100%;
    height: 100%;
    object-fit: contain;
    margin-bottom: 20px;
}

.video {
    width: 100%;
    height: 200px;
    margin-bottom: 20px;
}

.text {
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 20px;
}

/* 新增样式 */
.hotspot-item {
    font-size: 12px; /* 增大字体 */
    margin-bottom: 7px; /* 增加间隔 */
    word-wrap: break-word; /* 自动换行 */
    width: 90%; /* 确保宽度适应屏幕 */
    text-align: left; /* 居中对齐 */
}